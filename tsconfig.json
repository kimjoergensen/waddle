{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react-jsx",
    "alwaysStrict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "baseUrl": "./",
    "paths": {
      "/client/*": ["client/*"],
      "/public/*": ["public/*"]
    }
  },
  "include": ["client", "public", "global.d.ts"],
  "exclude": ["node_modules", "dist"]
}
