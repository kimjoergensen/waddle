{
  "compilerOptions": {
    "outDir": "build",
    "module": "CommonJS",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react-jsx",
    "alwaysStrict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": "client",
    "baseUrl": "./",
    "isolatedModules": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": false
  },
  "exclude": ["node_modules", "build"],
  "include": ["client"]
}
